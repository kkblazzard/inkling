<head>
    <title>Edit User</title>

    <link rel="stylesheet" type="text/css" media="screen" href="~/css/User/Profile.css"/>
</head>
<header>
    <div class= "header">
        <partial name="HeadingPartial"/>
    </div>
</header>
<body>
    <nav>
        <a>Home |</a>
        <a href="/edit">Edit User Profile |</a>
        <a href="/NewIdea">New Idea |</a>
        <a href="/AllIdeas">Ideas in your que |</a>
        <a href="/review">Review ideas</a>
        <a href="/Logout">Logout</a>
    </nav>

    <div class="left">
        <h4>Submitted Ideas</h4>
        <div class="scrollbox">
            @foreach(var idea in Model)
            {
                <a href="idea/@idea.id">@idea.name</a>
            }
        </div>
    </div>    
    <div class="right">
        <h4>Ideas needing approval</h4>
        <div class="scrollbox">
            @foreach(var review in ViewBag.review)
            {
                <a href="idea/@review.id">@review.name</a>
            }
        </div>
    </div>
    <br>
    <h3 ><a class="new" href="idea/form">Submit a new idea</a></h3>
</body>